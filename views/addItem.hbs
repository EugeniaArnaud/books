<div class="container d-flex justify-content-center ">
    <div class="col-6 ">
        <h1 class="text-center my-4">Carga de producto</h1>
        {{#each msgError}}
        <div class="alert alert-danger  d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img"
                aria-label="Success:">
                <path
                    d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </svg>
            <div>
                {{msg}}
            </div>
        </div>
        {{/each}}
        <div class="row justify-content-center align-items-center">
            <form action="/addItem" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" {{#if oldData.name}}
                        value="{{oldData.name}}" {{/if}}>

                </div>
                <div class="mb-3">
                    <label for="origin" class="form-label">Autor</label>
                    <input type="text" class="form-control" id="origin" name="origin" {{#if oldData.origin}}
                        value="{{oldData.origin}}" {{/if}}>
                </div>
                <div class="mb-3">
                    <label for="presentation" class="form-label">Editorial</label>
                    <input type="text" class="form-control" id="presentation" name="presentation" {{#if
                        oldData.presentation}} value="{{oldData.presentation}}" {{/if}}>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Descripcion</label>
                    <input type="text" class="form-control" id="description" name="description" {{#if
                        oldData.description}} value="{{oldData.description}}" {{/if}}>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Precio</label>
                    <input type="number" class="form-control" id="price" name="price" {{#if oldData.price}}
                        value="{{oldData.price}}" {{/if}}>
                </div>
             
                <div class="mb-3">
                    <label for="imageFile" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="imageFile" name="imageFile" {{#if oldData.imageFile}}
                        value="{{oldData.imageFile}}" {{/if}}>
                </div>


                <button type="submit" class="btn btn-primary mb-5">Submit</button>
            </form>
        </div>
    </div>

</div>

